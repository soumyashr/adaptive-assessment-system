# Frontend Dockerfile
FROM node:18-alpine as build
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code (includes .env files)
COPY . .

# Accept optional build argument
# If provided, it overrides .env.production
ARG REACT_APP_API_URL
ENV REACT_APP_API_URL=${REACT_APP_API_URL}

# Debug: Show what the API URL is during build
RUN echo "Building with API URL: ${REACT_APP_API_URL:-from .env file}"

# Build the React app
# Uses .env.production by default, or build arg if provided
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files to nginx
COPY --from=build /app/build /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Create directory for SSL certificates (will be mounted as volume)
RUN mkdir -p /etc/nginx/ssl

# Expose both HTTP and HTTPS ports
EXPOSE 80 443

CMD ["nginx", "-g", "daemon off;"]
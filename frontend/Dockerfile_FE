# Frontend Dockerfile
FROM node:18-alpine as build
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy application code
COPY . .

# CRITICAL: Accept build argument and set as environment variable
ARG REACT_APP_API_URL
ENV REACT_APP_API_URL=$REACT_APP_API_URL

# Debug: Show what the API URL is during build
RUN echo "Building with API URL: $REACT_APP_API_URL"

# Build the React app
# npm run build ( not npm start ) so React considers it a Production environment
# and hence uses .env file and ignores .env.development file
RUN npm run build

# Production stage
FROM nginx:alpine

# Copy built files to nginx
COPY --from=build /app/build /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]